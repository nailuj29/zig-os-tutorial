---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---
<a href={post.url}>
  <article class="dark:bg-gray-500 dark:border-gray-800 bg-gray-200 border-gray-500 w-fill px-4 py-2 rounded-md mt-2 border-2">
    <header>
      <h1 class="text-lg font-bold">{post.title}</h1>
    </header>
    <p>{post.description}</p>
  </article>
</a>